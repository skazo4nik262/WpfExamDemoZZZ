<Window x:Class="WpfExamDemoZZZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExamDemoZZZ"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="300">
    <StackPanel HorizontalAlignment="Center" Width="250" VerticalAlignment="Center">
        <Label Content="Sign In" HorizontalAlignment="Center"/>
        <Label Content="Login"/>
        <TextBox Text="{Binding User.Login}" />
        <Label Content="Password"/>
        <PasswordBox x:Name="password"/>
        <Button VerticalAlignment="Center" Click="SignInClick" Content="Авторизоваться" Width="100" Margin="0 10 0 0"/>
    </StackPanel>
</Window>
